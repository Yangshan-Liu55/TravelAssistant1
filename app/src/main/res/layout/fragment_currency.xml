<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    >

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/flagView"-->
        <!--/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/bgPage"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/input_image"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:minHeight="70dp"
        android:scaleType="fitStart"
        />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/input_currency_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textSize="30dp"
            android:textColor="#666872" />

        <TextView
            android:id="@+id/input_currency_fullname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:textColor="#40666872"
            />

    </LinearLayout>


    <EditText
        android:id="@+id/input_currency_value"
        android:inputType="number"
        android:hint="0"
        android:maxLength="6"
        android:imeOptions="actionDone"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical|right"
        android:textSize="30dp"
        android:textColor="#666872"
        android:layout_marginRight="-10dp"
        android:maxLines="1"
        android:background="@null" />


    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:id="@+id/list_view"

        >

    </ListView>


    <ImageButton
        android:id="@+id/currency_add"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/my_button_bg"
        android:src="@drawable/plus"
        android:padding="40dp"
        />

</RelativeLayout>